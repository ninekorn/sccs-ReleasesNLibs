                     ItemsSource="{Binding Source={StaticResource SamplesXml}, XPath=Samples/Sample}"      
                                           
                     Background="{StaticResource BackgroundBrush}"
                     BorderThickness="1"
                     BorderBrush="{StaticResource BackgroundBrush}"
	                 Padding="5 0"/-->



                <!--ListBox Name="SampleList"
                         
	                 SelectedIndex="0"
                         
