                <Frame VerticalAlignment="Center"  DockPanel.Dock="Top" Name="ContentFrame2" Navigated="ContentFrame_OnNavigated" Focusable="false" Content="" Margin="10" HorizontalAlignment="Center"  Height="488" Width="789"/>


